{
  "extends": "next/core-web-vitals",
  "plugins": ["unused-imports", "import", "@typescript-eslint"],
  "rules": {
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "pathGroups": [
          {
            "pattern": "@/register/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/login/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/password-reset/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/sidebar/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/navigation/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/components/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/hooks/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/utils/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/helpers/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/validators/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/enums/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/types/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/shared/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/styles/**",
            "group": "internal",
            "position": "before"
          }
        ],
        "pathGroupsExcludedImportTypes": []
      }
    ],
    "@typescript-eslint/no-explicit-any": "error"
  }
}
